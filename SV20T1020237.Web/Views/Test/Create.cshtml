@model SV20T1020237.Web.Models.Person
@{
    ViewBag.Title = "Create Person";
}
<div class="box box-primary">
    <div class="box-body">
        <form action="~/Test/Save" method="post">
            <input type="hidden" name="ShipperID" value="" />
            <div class="form-group">
                <label>Person name:</label>
                <input type="text" class="form-control" name="Name" value="@Model.Name" autofocus>
            </div>
            <div class="form-group">
                <label>BirthDate:</label>
                <input type="hidden" name="BirthDate" value="@Model.BirthDate"/>
                <input type="text" class="form-control date-picker" name="BirthDateInput" 
                        value="@Model.Salary.ToString("dd/MM/yyyy", new System.Globalization.CultureInfo("en-GB"))">
            </div>

            <div class="form-group">
                <label>Salary:</label>
                <input type="text" class="form-control" name="Salary" value="@Model.Salary">
            </div>

            <div class="form-group text-right">
                <button type="submit" class="btn btn-primary">
                    <i class="fa fa-floppy-o"></i>
                    Lưu dữ liệu
                </button>
                <a href="~/Shipper" class="btn btn-default">
                    Quay lại
                </a>
            </div>

        </form>
    </div>
</div>
