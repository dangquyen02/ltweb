@model SV20T1020237.DomainModels.Category
@{
    ViewBag.Title = "Xoá loại hàng";
}
<div class="box box-danger">
    <div class="box-body">
        <form action="~/Category/Delete/@Model.CategoryID" method="post" enctype="multipart/form-data">
            <div class="form-group">
                <label> Tên loại hàng: </label>
                <p class="form-control-static">@Model.CategoryName</p>
            </div>

            <div class="form-group">
                <label> Mô tả: </label>
                <p class="form-control-static">@Model.Description</p>
            </div>
            <div class="form-group">
                <label>Ảnh minh hoạ:</label>
                <p class="form-control-static">
                    <img id="Photo" src="~/images/categories/@Model.Photo" style="width:200px" />
                </p>
            </div>
            <div class="form-group text-right">
                <button type="submit" class="btn btn-danger">
                    <i class="fa fa-trash"></i>
                    Xác nhận xoá
                </button>
                <a href="~/Category" class="btn btn-default">
                    <i class="fa fa-arrow-left"></i>
                    Quay lại
                </a>
            </div>
        </form>
    </div>
</div>